@namespace RizzyUI
@using Blazicons
@inherits RzComponent<DialogContent.Slots>

<RzModalPrimitive AdditionalAttributes="@AdditionalAttributes"
                  OverlayClass="@SlotClasses.GetBackdrop()"
                  ContentClass="@SlotClasses.GetBase()"
                  OverlayDataSlot="dialog-overlay"
                  ContentDataSlot="dialog-content"
                  Role="dialog"
                  AriaLabelledBy="@ParentDialog?.AriaLabelId"
                  AriaDescribedBy="@ParentDialog?.AriaDescriptionId">
    @ChildContent

    @if (ShowCloseButton)
    {
        <button x-on:click="closeModal"
                type="button"
                aria-label="@Localizer["RzDialog.CloseButtonAriaLabel"]"
                data-slot="dialog-close"
                class="@SlotClasses.GetCloseButton()">
            <Blazicon Svg="Lucide.X" class="@SlotClasses.GetCloseButtonIcon()" data-slot="dialog-close-icon" aria-hidden="true" />
        </button>
    }
</RzModalPrimitive>
