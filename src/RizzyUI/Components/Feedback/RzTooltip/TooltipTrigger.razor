@namespace RizzyUI
@inherits RzAsChildComponent<TooltipTrigger.Slots>

@if (AsChild)
{
    @RenderAsChild()
}
else
{
    <HtmlElement Element="@EffectiveElement"
                 id="@TriggerId"
                 @attributes="@AdditionalAttributes"
                 class="@SlotClasses.GetBase()"
                 aria-describedby="@ContentId"
                 data-state="closed"
                 data-slot="tooltip-trigger">
        @ChildContent
    </HtmlElement>
}
