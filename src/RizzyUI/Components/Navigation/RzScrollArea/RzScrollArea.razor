@namespace RizzyUI
@inherits RzComponent<RzScrollArea.Slots>

<HtmlElement Element="@EffectiveElement"
             @attributes="@AdditionalAttributes"
             id="@Id"
             class="@SlotClasses.GetBase()"
             data-slot="scroll-area"
             data-orientation="@Orientation.ToString().ToLowerInvariant()">
    <div data-slot="scroll-area-viewport"
         class="@SlotClasses.GetViewport()"
         tabindex="0">
        @ChildContent
    </div>

    @if (ShowDefaultScrollBar)
    {
        <ScrollBar Orientation="@DefaultScrollBarOrientation" />
    }

    <div data-slot="scroll-area-corner"></div>
</HtmlElement>
