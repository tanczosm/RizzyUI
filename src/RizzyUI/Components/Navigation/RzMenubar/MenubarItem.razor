@namespace RizzyUI
@using Blazicons
@using RizzyUI.Extensions
@inherits RzComponent<MenubarItem.Slots>

<HtmlElement Element="@EffectiveElement"
             id="@Id"
             @attributes="@AdditionalAttributes"
             class="@SlotClasses.GetBase()"
             role="menuitem"
             tabindex="-1"
             aria-disabled="@(Disabled.ToString().ToLowerInvariant())"
             disabled=@(Disabled ? "disabled" : null)
             data-disabled=@(Disabled ? "disabled" : null)
             data-variant="@Variant.ToString().ToKebabCase()"
             x-on:click="handleItemClick"
             x-on:mouseenter="handleItemMouseEnter"
             x-on:mouseleave="handleItemMouseLeave"
             data-slot="menubar-item">
    @if (Icon is not null)
    {
        <Blazicon Svg="@Icon" class="@SlotClasses.GetIcon()" data-slot="icon" aria-hidden="true" />
    }
    @ChildContent
    @if (ShortcutContent is not null)
    {
        @ShortcutContent
    }
</HtmlElement>
