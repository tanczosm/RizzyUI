@namespace RizzyUI
@using Blazicons
@inherits RzComponent<RzEventViewer.Slots>

<HtmlElement Element="@EffectiveElement"
             id="@Id"
             @attributes="@AdditionalAttributes"
             class="@SlotClasses.GetBase()"
             data-slot="event-viewer">
    <div data-alpine-root="@Id"
         x-data="rzEventViewer"
         data-assets="@_assets"
         data-nonce="@Nonce"
         data-event-name="@EventName"
         data-event-names="@EventNames"
         data-target="@Target"
         data-max-entries="@MaxEntries"
         data-auto-scroll="@AutoScroll.ToString().ToLowerInvariant()"
         data-pretty="@Pretty.ToString().ToLowerInvariant()"
         data-show-timestamp="@ShowTimestamp.ToString().ToLowerInvariant()"
         data-show-event-meta="@ShowEventMeta.ToString().ToLowerInvariant()"
         data-level="@Level"
         data-filter="@Filter"
         data-pause-text="@PauseButtonText"
         data-resume-text="@ResumeButtonText"
         data-events="@ResolvedEventNamesAttribute"
         data-copy-title="@CopyButtonTitle"
         data-copied-title="@CopiedButtonTitle"
         data-listening-text="@ListeningStatusText"
         data-paused-text="@PausedStatusText"
         data-expand-text="@ExpandEntryDetailsText"
         data-collapse-text="@CollapseEntryDetailsText"
         class="@SlotClasses.GetContainer()"
         data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.Container)">
        <div class="@SlotClasses.GetHeader()" data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.Header)">
            <span class="@SlotClasses.GetTitle()" data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.Title)">@ViewerTitle</span>
            <div class="@SlotClasses.GetControls()" data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.Controls)" x-cloak>
                <span x-text="getStatusText" class="@SlotClasses.GetStatusBadge()" data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.StatusBadge)"></span>
                <span x-text="entryCount" class="@SlotClasses.GetEntryCount()" data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.EntryCount)"></span>
                <button type="button"
                        x-on:click="copyEntries"
                        :title="getCopiedTitle"
                        x-on:click.away="disableCopied"
                        aria-label="@CopyButtonText"
                        class="@SlotClasses.GetIconButton()"
                        data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.IconButton)">
                    <svg x-show="notCopied"
                         xmlns="http://www.w3.org/2000/svg"
                         fill="none"
                         viewBox="0 0 24 24"
                         stroke-width="1.5"
                         stroke="currentColor"
                         class="@SlotClasses.GetActionIcon()"
                         data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.ActionIcon)"
                         aria-hidden="true">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184"></path>
                    </svg>
                    <svg x-show="copied"
                         xmlns="http://www.w3.org/2000/svg"
                         fill="none"
                         viewBox="0 0 24 24"
                         stroke-width="1.3"
                         stroke="currentColor"
                         class="@SlotClasses.GetActionIcon()"
                         data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.ActionIcon)"
                         aria-hidden="true">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0118 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3l1.5 1.5 3-3.75"></path>
                    </svg>
                </button>
                <button type="button"
                        x-on:click="togglePaused"
                        aria-label="@PauseButtonText"
                        class="@SlotClasses.GetIconButton()"
                        data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.IconButton)">
                    <Blazicon Svg="Lucide.CirclePause"
                              x-show="notPaused"
                              class="@SlotClasses.GetActionIcon()"
                              data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.ActionIcon)"
                              aria-hidden="true" />
                    <Blazicon Svg="Lucide.CirclePlay"
                              x-show="isPaused"
                              class="@SlotClasses.GetActionIcon()"
                              data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.ActionIcon)"
                              aria-hidden="true" />
                </button>
                <button type="button"
                        x-on:click="clearEntries"
                        aria-label="@ClearButtonText"
                        class="@SlotClasses.GetIconButton()"
                        data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.IconButton)">
                    <Blazicon Svg="Lucide.CircleX"
                              class="@SlotClasses.GetActionIcon()"
                              data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.ActionIcon)"
                              aria-hidden="true" />
                </button>
            </div>
        </div>

        <div x-show="hasError"
             x-text="error"
             class="@SlotClasses.GetError()"
             data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.Error)"></div>

        <div x-ref="console"
             role="log"
             aria-live="polite"
             aria-atomic="false"
             x-on:scroll.passive="handleConsoleScroll"
             class="@SlotClasses.GetConsole()"
             data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.Console)">
            <template x-for="entry in entries" :key="entry.id">
                <div class="@SlotClasses.GetEntry()" data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.Entry)">
                    <button type="button"
                            :data-entry-id="entry.id"
                            x-on:click="toggleEntryExpansion"
                            x-on:keydown.enter.prevent="toggleEntryExpansion"
                            x-on:keydown.space.prevent="toggleEntryExpansion"
                            :aria-expanded="entry.expanded"
                            class="@SlotClasses.GetRowHeader()"
                            data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.RowHeader)">
                        <span class="@SlotClasses.GetRowMeta()" data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.RowMeta)">
                            <span x-text="entry.timestamp"
                                  x-show="entry.hasTimestamp"
                                  class="@SlotClasses.GetTimestamp()"
                                  data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.Timestamp)"></span>
                            <span x-text="entry.type"
                                  class="@SlotClasses.GetEventName()"
                                  data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.EventName)"></span>
                        </span>
                        <span x-text="entry.bodyPreview"
                              class="@SlotClasses.GetRowPreview()"
                              data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.RowPreview)"></span>
                        <span class="@SlotClasses.GetRowToggle()"
                              :class="entry.toggleClass"
                              data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.RowToggle)">
                            <span class="sr-only" x-text="entry.toggleLabel"></span>
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 fill="none"
                                 viewBox="0 0 24 24"
                                 stroke-width="1.5"
                                 stroke="currentColor"
                                 class="@SlotClasses.GetActionIcon()"
                                 data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.ActionIcon)"
                                 aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </span>
                    </button>
                    <div x-show="entry.expanded"
                         class="@SlotClasses.GetRowExpanded()"
                         data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.RowExpanded)">
                        <pre x-text="entry.bodyRaw"
                             class="@SlotClasses.GetPayloadPre()"
                             data-slot="@RzEventViewer.SlotNames.NameOf(SlotTypes.PayloadPre)"></pre>
                    </div>
                </div>
            </template>
        </div>
    </div>
</HtmlElement>
