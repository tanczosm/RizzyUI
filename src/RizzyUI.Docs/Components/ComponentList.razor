@using System.Collections.Generic

<div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 not-prose my-6">
    @foreach (var component in Components)
    {
        <a href="@component.Href"
           hx-boost="true"
           hx-select="#content"
           hx-target="#content"
           hx-swap="outerHTML"
           class="group rounded-lg border bg-card p-4 transition-colors hover:border-primary/40 hover:bg-accent/30">
            <p class="text-base font-semibold text-foreground">@component.Name</p>
            <p class="mt-2 text-sm text-muted-foreground">@component.Description</p>
        </a>
    }
</div>

