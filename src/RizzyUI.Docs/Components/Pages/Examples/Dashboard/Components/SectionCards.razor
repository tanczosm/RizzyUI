
@namespace RizzyUI.Docs.Components.Pages.Examples.Dashboard.Components
@using RizzyUI
@using Blazicons

<div class="grid grid-cols-1 gap-4 px-4 *:data-[slot=card]:bg-gradient-to-t *:data-[slot=card]:shadow-xs lg:px-6 xl/main:grid-cols-2 5xl/main:grid-cols-4">
    <RzCard class="container/card">
        <CardHeader>
            <CardDescription>Total Revenue</CardDescription>
            <CardTitle class="text-2xl font-semibold tabular-nums 250px/card:text-3xl">$1,250.00</CardTitle>
            <CardAction>
                <RzBadge Variant="ThemeVariant.Default" Outline="true">
                    <Blazicon Svg="MdiIcon.TrendingUp" />
                    +12.5%
                </RzBadge>
            </CardAction>
        </CardHeader>
        <CardFooter class="flex-col items-start gap-1.5 text-sm">
            <div class="line-clamp-1 flex gap-2 font-medium">
                Trending up this month <Blazicon Svg="MdiIcon.TrendingUp" class="size-4" />
            </div>
            <div class="text-muted-foreground">Visitors for the last 6 months</div>
        </CardFooter>
    </RzCard>
    
    <RzCard class="container/card">
        <CardHeader>
            <CardDescription>New Customers</CardDescription>
            <CardTitle class="text-2xl font-semibold tabular-nums 250px/card:text-3xl">1,234</CardTitle>
            <CardAction>
                <RzBadge Variant="ThemeVariant.Default" Outline="true">
                    <Blazicon Svg="MdiIcon.TrendingDown" />
                    -20%
                </RzBadge>
            </CardAction>
        </CardHeader>
        <CardFooter class="flex-col items-start gap-1.5 text-sm">
            <div class="line-clamp-1 flex gap-2 font-medium">
                Down 20% this period <Blazicon Svg="MdiIcon.TrendingDown" class="size-4" />
            </div>
            <div class="text-muted-foreground">Acquisition needs attention</div>
        </CardFooter>
    </RzCard>

    <RzCard class="container/card">
        <CardHeader>
            <CardDescription>Active Accounts</CardDescription>
            <CardTitle class="text-2xl font-semibold tabular-nums 250px/card:text-3xl">45,678</CardTitle>
            <CardAction>
                <RzBadge Variant="ThemeVariant.Default" Outline="true">
                    <Blazicon Svg="MdiIcon.TrendingUp" />
                    +12.5%
                </RzBadge>
            </CardAction>
        </CardHeader>
        <CardFooter class="flex-col items-start gap-1.5 text-sm">
            <div class="line-clamp-1 flex gap-2 font-medium">
                Strong user retention <Blazicon Svg="MdiIcon.TrendingUp" class="size-4" />
            </div>
            <div class="text-muted-foreground">Engagement exceed targets</div>
        </CardFooter>
    </RzCard>

    <RzCard class="container/card">
        <CardHeader>
            <CardDescription>Growth Rate</CardDescription>
            <CardTitle class="text-2xl font-semibold tabular-nums 250px/card:text-3xl">4.5%</CardTitle>
            <CardAction>
                <RzBadge Variant="ThemeVariant.Default" Outline="true">
                    <Blazicon Svg="MdiIcon.TrendingUp" />
                    +4.5%
                </RzBadge>
            </CardAction>
        </CardHeader>
        <CardFooter class="flex-col items-start gap-1.5 text-sm">
            <div class="line-clamp-1 flex gap-2 font-medium">
                Steady performance increase <Blazicon Svg="MdiIcon.TrendingUp" class="size-4" />
            </div>
            <div class="text-muted-foreground">Meets growth projections</div>
        </CardFooter>
    </RzCard>
</div>