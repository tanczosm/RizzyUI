
@page "/components/checkbox"
@namespace RizzyUI.Docs.Components.Pages.Components

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms
@using RizzyUI
@using Rizzy.Components

<PageTitle>Checkbox & Checkbox Group</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzBreadcrumb class="mb-4">
                <BreadcrumbList>
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Docs</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/components" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Components</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbPage>Checkbox</BreadcrumbPage>
                    </BreadcrumbItem>
                </BreadcrumbList>
            </RzBreadcrumb>

            <RzHeading Level="HeadingLevel.H1" QuickReferenceTitle="Checkbox" class="scroll-mt-20">Checkbox</RzHeading>
            <RzParagraph>
                Components for capturing boolean or multiple-choice selections from a user. Use `RzCheckbox` for a single true/false input and `RzCheckboxGroup` for selecting multiple options from a list.
            </RzParagraph>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Basic Checkbox" class="scroll-mt-20">
                    Basic Checkbox
                </RzHeading>
                <RzParagraph>
                    A standalone checkbox for a single boolean value, composed with `Field` and `FieldLabel` for proper form structure and accessibility.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto mb-5 w-full max-w-sm p-8">
                        <EditForm Model="_model">
                            <Field Orientation="FieldOrientation.Horizontal">
                                <RzInputCheckbox For="@(() => _model.AcceptTerms)" />
                                <FieldLabel For="@(() => _model.AcceptTerms)" class="font-normal">Accept terms and conditions</FieldLabel>
                            </Field>
                        </EditForm>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;EditForm Model=&quot;@@_model&quot;&gt;
    &lt;Field Orientation=&quot;FieldOrientation.Horizontal&quot;&gt;
        &lt;RzCheckbox For=&quot;@@(() =&gt; _model.AcceptTerms)&quot; /&gt;
        &lt;FieldLabel For=&quot;@@(() =&gt; _model.AcceptTerms)&quot; class=&quot;font-normal&quot;&gt;Accept terms and conditions&lt;/FieldLabel&gt;
    &lt;/Field&gt;
&lt;/EditForm&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Checkbox with Description" class="scroll-mt-20">
                    Checkbox with Description
                </RzHeading>
                <RzParagraph>
                    Add a `FieldDescription` to provide more context for the checkbox.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto mb-5 w-full max-w-sm p-8">
                        <EditForm Model="_model">
                            <Field Orientation="FieldOrientation.Horizontal" class="items-start">
                                <RzInputCheckbox For="@(() => _model.AcceptTerms)" />
                                <RzFieldGroup>
                                    <Field>
                                        <FieldLabel For="@(() => _model.AcceptTerms)" class="font-normal">Accept terms and conditions</FieldLabel>
                                        <FieldDescription>
                                            By clicking this checkbox, you agree to the terms and conditions.
                                        </FieldDescription>
                                    </Field>
                                </RzFieldGroup>
                            </Field>
                        </EditForm>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;Field Orientation=&quot;FieldOrientation.Horizontal&quot; class=&quot;items-start&quot;&gt;
    &lt;RzInputCheckbox For=&quot;@@(() =&gt; _model.AcceptTerms)&quot; /&gt;
    &lt;RzFieldGroup&gt;
        &lt;Field&gt;
            &lt;FieldLabel For=&quot;@@(() =&gt; _model.AcceptTerms)&quot; class=&quot;font-normal&quot;&gt;Accept terms and conditions&lt;/FieldLabel&gt;
            &lt;FieldDescription&gt;
                By clicking this checkbox, you agree to the terms and conditions.
            &lt;/FieldDescription&gt;
        &lt;/Field&gt;
    &lt;/RzFieldGroup&gt;
&lt;/Field&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Checkbox Group" class="scroll-mt-20">
                    Checkbox Group
                </RzHeading>
                <RzParagraph>
                    Use `RzCheckboxGroup` within an `Field` to bind multiple options to a collection. This example binds to the `TaskNotifications` list on the model.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto mb-5 w-full max-w-sm p-8">
                        <EditForm Model="_model">
                            <Field>
                                <FieldLabel For="@(() => _model.TaskNotifications)">Tasks</FieldLabel>
                                <FieldDescription>
                                    Get notified when tasks you've created have updates.
                                    <RzLink Href="#">Manage tasks</RzLink>
                                </FieldDescription>
                                <RzCheckboxGroup For="@(() => _model.TaskNotifications)" class="mt-2">
                                    <RzCheckboxGroupItem TValue="string" Name="@("push")">
                                        <span class="text-sm">Push notifications</span>
                                    </RzCheckboxGroupItem>
                                    <RzCheckboxGroupItem TValue="string" Name="@("email")">
                                        <span class="text-sm">Email notifications</span>
                                    </RzCheckboxGroupItem>
                                </RzCheckboxGroup>
                            </Field>
                        </EditForm>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;Field&gt;
    &lt;FieldLabel For=&quot;@@(() =&gt; _model.TaskNotifications)&quot;&gt;Tasks&lt;/FieldLabel&gt;
    &lt;FieldDescription&gt;
        Get notified when tasks you&#39;ve created have updates.
        &lt;RzLink Href=&quot;#&quot;&gt;Manage tasks&lt;/RzLink&gt;
    &lt;/FieldDescription&gt;
    &lt;RzCheckboxGroup For=&quot;@@(() =&gt; _model.TaskNotifications)&quot; class=&quot;mt-2&quot;&gt;
        &lt;RzCheckboxGroupItem TValue=&quot;string&quot; Value=&quot;@@(&quot;push&quot;)&quot;&gt;
            &lt;span class=&quot;text-sm&quot;&gt;Push notifications&lt;/span&gt;
        &lt;/RzCheckboxGroupItem&gt;
        &lt;RzCheckboxGroupItem TValue=&quot;string&quot; Value=&quot;@@(&quot;email&quot;)&quot;&gt;
            &lt;span class=&quot;text-sm&quot;&gt;Email notifications&lt;/span&gt;
        &lt;/RzCheckboxGroupItem&gt;
    &lt;/RzCheckboxGroup&gt;
&lt;/Field&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Choice Card Pattern" class="scroll-mt-20">
                    Choice Card Pattern
                </RzHeading>
                <RzParagraph>
                    Create large, clickable "choice cards" by placing rich content inside an `RzCheckboxGroupItem`. The entire item acts as a label for the checkbox.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto mb-5 w-full max-w-sm p-8">
                        <EditForm Model="_model">
                            <RzCheckboxGroup For="@(() => _model.NotificationPreferences)">
                                <RzCheckboxGroupItem TValue="string" Value="@("enable-notifications")">
                                    <div class="flex w-full cursor-pointer items-start gap-3 rounded-lg border p-3 has-[[aria-checked=true]]:border-primary has-[[aria-checked=true]]:bg-accent/50 hover:bg-accent/50">
                                        <div class="grid gap-1.5 font-normal">
                                            <p class="text-sm font-medium leading-none">
                                                Enable notifications
                                            </p>
                                            <p class="text-sm text-muted-foreground">
                                                You can enable or disable notifications at any time.
                                            </p>
                                        </div>
                                    </div>
                                </RzCheckboxGroupItem>
                            </RzCheckboxGroup>
                        </EditForm>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCheckboxGroup For=&quot;@@(() =&gt; _model.NotificationPreferences)&quot;&gt;
    &lt;RzCheckboxGroupItem TValue=&quot;string&quot; Value=&quot;@@(&quot;enable-notifications&quot;)&quot;&gt;
        &lt;div class=&quot;flex w-full cursor-pointer items-start gap-3 rounded-lg border p-3 has-[[aria-checked=true]]:border-primary has-[[aria-checked=true]]:bg-accent/50 hover:bg-accent/50&quot;&gt;
            &lt;div class=&quot;grid gap-1.5 font-normal&quot;&gt;
                &lt;p class=&quot;text-sm font-medium leading-none&quot;&gt;
                    Enable notifications
                &lt;/p&gt;
                &lt;p class=&quot;text-sm text-muted-foreground&quot;&gt;
                    You can enable or disable notifications at any time.
                &lt;/p&gt;
            &lt;/div&gt;
        &lt;/div&gt;
    &lt;/RzCheckboxGroupItem&gt;
&lt;/RzCheckboxGroup&gt;
                </RzCodeViewer>
            </section>
        </MainContent>
    </RzArticle>
</RzQuickReferenceContainer>

@code {
    private class CheckboxDemoModel
    {
        [Required(ErrorMessage = "You must accept the terms and conditions.")]
        [Range(typeof(bool), "true", "true", ErrorMessage = "You must accept the terms and conditions.")]
        public bool AcceptTerms { get; set; }

        public List<string> Responses { get; set; } = new() { "push" };
        public List<string> TaskNotifications { get; set; } = new();
        public List<string> NotificationPreferences { get; set; } = new() { "enable-notifications" };
    }

    private CheckboxDemoModel _model = new();
}