
@page "/components/switch"
@namespace RizzyUI.Docs.Components.Pages.Components

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms
@using RizzyUI
@using Rizzy.Components

<PageTitle>Switch</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzBreadcrumb class="mb-4">
                <BreadcrumbList>
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Docs</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/components" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Components</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbPage>Switch</BreadcrumbPage>
                    </BreadcrumbItem>
                </BreadcrumbList>
            </RzBreadcrumb>

            <RzHeading Level="HeadingLevel.H1" QuickReferenceTitle="Switch" class="scroll-mt-20">Switch</RzHeading>
            <RzParagraph>
                A control that allows the user to toggle between checked and not checked states.
            </RzParagraph>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Basic Example" class="scroll-mt-20">
                    Basic Example
                </RzHeading>
                <RzParagraph>
                    A simple switch component with an associated label.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto mb-5 flex items-center justify-center gap-4 p-8">
                        <EditForm Model="_model">
                            <div class="flex items-center space-x-2">
                                <RzSwitch For="@(() => _model.AirplaneMode)" Id="airplane-mode" />
                                <Label for="airplane-mode">Airplane Mode</Label>
                            </div>
                        </EditForm>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;EditForm Model=&quot;@@_model&quot;&gt;
    &lt;div class=&quot;flex items-center space-x-2&quot;&gt;
        &lt;RzSwitch For=&quot;@@(() =&gt; _model.AirplaneMode)&quot; Id=&quot;airplane-mode&quot; /&gt;
        &lt;Label for=&quot;airplane-mode&quot;&gt;Airplane Mode&lt;/Label&gt;
    &lt;/div&gt;
&lt;/EditForm&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Usage in a Field" class="scroll-mt-20">
                    Usage in a Field
                </RzHeading>
                <RzParagraph>
                    For better form structure and accessibility, compose the `RzSwitch` within a `Field` component. 
                    Use `Orientation="FieldOrientation.Horizontal"` to layout the elements in a row.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto mb-5 w-full max-w-md p-8">
                        <EditForm Model="_model">
                            <Field Orientation="FieldOrientation.Horizontal" class="justify-between rounded-lg border p-4">
                                <div class="space-y-0.5">
                                    <FieldLabel For="@(() => _model.MarketingEmails)">Marketing emails</FieldLabel>
                                    <FieldDescription>
                                        Receive emails about new products, features, and more.
                                    </FieldDescription>
                                </div>
                                <RzSwitch For="@(() => _model.MarketingEmails)" />
                            </Field>
                        </EditForm>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;EditForm Model=&quot;@@_model&quot;&gt;
    &lt;Field Orientation=&quot;FieldOrientation.Horizontal&quot; class=&quot;justify-between rounded-lg border p-4&quot;&gt;
        &lt;div class=&quot;space-y-0.5&quot;&gt;
            &lt;FieldLabel For=&quot;@@(() =&gt; _model.MarketingEmails)&quot;&gt;Marketing emails&lt;/FieldLabel&gt;
            &lt;FieldDescription&gt;
                Receive emails about new products, features, and more.
            &lt;/FieldDescription&gt;
        &lt;/div&gt;
        &lt;RzSwitch For=&quot;@@(() =&gt; _model.MarketingEmails)&quot; /&gt;
    &lt;/Field&gt;
&lt;/EditForm&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Component Parameters" class="scroll-mt-20">
                    Component Parameters
                </RzHeading>
                <div class="not-prose mt-6 mb-10 overflow-hidden rounded-md border">
                    <table class="w-full text-sm">
                        <thead class="text-left bg-muted/50 font-semibold">
                            <tr><th class="p-4">Property</th><th class="p-4">Type</th><th class="p-4">Default</th><th class="p-4">Description</th></tr>
                        </thead>
                        <tbody class="divide-y">
                            <tr class="align-top"><td class="p-4"><code>For</code></td><td class="p-4"><code>Expression&lt;Func&lt;bool&gt;&gt;</code></td><td class="p-4">Required</td><td class="p-4">An expression that identifies the bound boolean value.</td></tr>
                            <tr class="align-top"><td class="p-4"><code>Value</code></td><td class="p-4"><code>bool?</code></td><td class="p-4"><code>null</code></td><td class="p-4">The current value of the switch.</td></tr>
                            <tr class="align-top"><td class="p-4"><code>DisplayName</code></td><td class="p-4"><code>string?</code></td><td class="p-4"><code>null</code></td><td class="p-4">The display name for the input, used for validation messages and labels if not otherwise specified.</td></tr>
                            <tr class="align-top"><td class="p-4"><code>AriaLabel</code></td><td class="p-4"><code>string?</code></td><td class="p-4">"Toggle switch"</td><td class="p-4">The accessible label for the switch, announced by screen readers.</td></tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </MainContent>
    </RzArticle>
</RzQuickReferenceContainer>

@code {
    private class SwitchDemoModel
    {
        public bool AirplaneMode { get; set; }
        public bool MarketingEmails { get; set; }
    }

    private SwitchDemoModel _model = new();
}