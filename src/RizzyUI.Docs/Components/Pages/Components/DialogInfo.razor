                        <DialogTrigger AsChild>
                            <RzButton Variant="ThemeVariant.Primary">Open Basic Dialog</RzButton>
                        </DialogTrigger>
                        <DialogContent>
                            <DialogHeader>
                                <DialogTitle>Basic Dialog Example</DialogTitle>
                                <DialogDescription>
