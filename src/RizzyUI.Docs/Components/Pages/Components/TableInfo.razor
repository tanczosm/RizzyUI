@page "/components/table"
@using RizzyUI
@using RizzyUI.Docs.Components.Layout

<PageTitle>Table</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzBreadcrumb class="mb-4 not-prose">
                <BreadcrumbList>
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Docs</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/components" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Components</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbPage>Table</BreadcrumbPage>
                    </BreadcrumbItem>
                </BreadcrumbList>
            </RzBreadcrumb>

            <RzHeading Level="HeadingLevel.H1" QuickReferenceTitle="Table" class="scroll-mt-20">Table</RzHeading>
            <RzParagraph>
                A shadcn/ui style table family for semantic tabular layouts with composable header, body, footer, row, and cell primitives.
            </RzParagraph>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Example" class="scroll-mt-20">Example</RzHeading>
                <RzParagraph TextColor="SemanticColor.Foreground">
                    Use <code>RzSimpleTable</code> as the container and compose table semantics with <code>TableHeader</code>, <code>TableBodySection</code>, and friends.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="w-full rounded-md border p-4">
                        <RzSimpleTable>
                            <TableCaption>Recent invoices</TableCaption>
                            <TableHeader>
                                <TableRowItem>
                                    <TableHead>Invoice</TableHead>
                                    <TableHead>Status</TableHead>
                                    <TableHead>Method</TableHead>
                                    <TableHead class="text-right">Amount</TableHead>
                                </TableRowItem>
                            </TableHeader>
                            <TableBodySection>
                                <TableRowItem>
                                    <TableCellItem>INV001</TableCellItem>
                                    <TableCellItem>Paid</TableCellItem>
                                    <TableCellItem>Credit Card</TableCellItem>
                                    <TableCellItem class="text-right">$250.00</TableCellItem>
                                </TableRowItem>
                                <TableRowItem data-state="selected">
                                    <TableCellItem>INV002</TableCellItem>
                                    <TableCellItem>Pending</TableCellItem>
                                    <TableCellItem>PayPal</TableCellItem>
                                    <TableCellItem class="text-right">$150.00</TableCellItem>
                                </TableRowItem>
                                <TableRowItem>
                                    <TableCellItem>INV003</TableCellItem>
                                    <TableCellItem>Unpaid</TableCellItem>
                                    <TableCellItem>Bank Transfer</TableCellItem>
                                    <TableCellItem class="text-right">$350.00</TableCellItem>
                                </TableRowItem>
                            </TableBodySection>
                            <TableFooter>
                                <TableRowItem>
                                    <TableCellItem colspan="3">Total</TableCellItem>
                                    <TableCellItem class="text-right">$750.00</TableCellItem>
                                </TableRowItem>
                            </TableFooter>
                        </RzSimpleTable>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzSimpleTable&gt;
    &lt;TableCaption&gt;Recent invoices&lt;/TableCaption&gt;
    &lt;TableHeader&gt;
        &lt;TableRowItem&gt;
            &lt;TableHead&gt;Invoice&lt;/TableHead&gt;
            &lt;TableHead&gt;Status&lt;/TableHead&gt;
            &lt;TableHead&gt;Method&lt;/TableHead&gt;
            &lt;TableHead class=&quot;text-right&quot;&gt;Amount&lt;/TableHead&gt;
        &lt;/TableRowItem&gt;
    &lt;/TableHeader&gt;
    &lt;TableBodySection&gt;
        &lt;TableRowItem&gt;
            &lt;TableCellItem&gt;INV001&lt;/TableCellItem&gt;
            &lt;TableCellItem&gt;Paid&lt;/TableCellItem&gt;
            &lt;TableCellItem&gt;Credit Card&lt;/TableCellItem&gt;
            &lt;TableCellItem class=&quot;text-right&quot;&gt;$250.00&lt;/TableCellItem&gt;
        &lt;/TableRowItem&gt;
    &lt;/TableBodySection&gt;
&lt;/RzSimpleTable&gt;
                </RzCodeViewer>
            </section>
        </MainContent>
    </RzArticle>
</RzQuickReferenceContainer>
