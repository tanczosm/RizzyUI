@page "/components/toggle"
@using RizzyUI

<PageTitle>Toggle</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzBreadcrumb class="mb-4 not-prose">
                <BreadcrumbList>
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Docs</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/components" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Components</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbPage>Toggle</BreadcrumbPage>
                    </BreadcrumbItem>
                </BreadcrumbList>
            </RzBreadcrumb>

            <RzHeading Level="HeadingLevel.H1" QuickReferenceTitle="Toggle" class="scroll-mt-20">Toggle</RzHeading>
            <RzParagraph>
                A two-state button that can be pressed and unpressed.
            </RzParagraph>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Default" class="scroll-mt-20">Default</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center p-8">
                        <RzToggle class="font-semibold">B</RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle class=&quot;font-semibold&quot;&gt;B&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Outline" class="scroll-mt-20">Outline</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center p-8">
                        <RzToggle Variant="ToggleVariant.Outline" class="font-semibold">B</RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; class=&quot;font-semibold&quot;&gt;B&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="With Text" class="scroll-mt-20">With Text</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center gap-2 p-8">
                        <RzToggle Variant="ToggleVariant.Outline">Bold</RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline">Italic</RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline">Underline</RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot;&gt;Bold&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot;&gt;Italic&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot;&gt;Underline&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Sizes" class="scroll-mt-20">Sizes</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center gap-2 p-8">
                        <RzToggle Variant="ToggleVariant.Outline" Size="ToggleSize.Small" class="font-semibold">B</RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline" Size="ToggleSize.Default" class="font-semibold">B</RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline" Size="ToggleSize.Large" class="font-semibold">B</RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; Size=&quot;ToggleSize.Small&quot; class=&quot;font-semibold&quot;&gt;B&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; Size=&quot;ToggleSize.Default&quot; class=&quot;font-semibold&quot;&gt;B&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; Size=&quot;ToggleSize.Large&quot; class=&quot;font-semibold&quot;&gt;B&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Disabled" class="scroll-mt-20">Disabled</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center gap-2 p-8">
                        <RzToggle Variant="ToggleVariant.Outline" class="font-semibold" Disabled>B</RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline" class="font-semibold" Disabled Pressed>U</RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; class=&quot;font-semibold&quot; Disabled&gt;B&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; class=&quot;font-semibold&quot; Disabled Pressed&gt;U&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Controlled" class="scroll-mt-20">Controlled</RzHeading>
                <RzParagraph>Use two-way binding with <code>@@bind-Pressed</code> for controlled scenarios.</RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 flex-col items-center justify-center gap-3 p-8">
                        <RzToggle @bind-Pressed="_isPressed" Variant="ToggleVariant.Outline">Italic</RzToggle>
                        <RzParagraph class="m-0 text-sm">Pressed: @_isPressed</RzParagraph>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle @@bind-Pressed=&quot;_isPressed&quot; Variant=&quot;ToggleVariant.Outline&quot;&gt;Italic&lt;/RzToggle&gt;
&lt;RzParagraph class=&quot;m-0 text-sm&quot;&gt;Pressed: @@_isPressed&lt;/RzParagraph&gt;
                </RzCodeViewer>
            </section>
        </MainContent>
    </RzArticle>
</RzQuickReferenceContainer>

@code {
    private bool _isPressed;
}
