@page "/components/toggle"
@using RizzyUI
@using Blazicons

<PageTitle>Toggle</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzBreadcrumb class="mb-4 not-prose">
                <BreadcrumbList>
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Docs</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/components" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Components</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbPage>Toggle</BreadcrumbPage>
                    </BreadcrumbItem>
                </BreadcrumbList>
            </RzBreadcrumb>

            <RzHeading Level="HeadingLevel.H1" QuickReferenceTitle="Toggle" class="scroll-mt-20">Toggle</RzHeading>
            <RzParagraph>
                A two-state button that can be pressed and unpressed.
            </RzParagraph>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Default" class="scroll-mt-20">Default</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center p-8">
                        <RzToggle aria-label="Toggle bold">
                            <Blazicon Svg="Lucide.Bold" />
                        </RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle aria-label=&quot;Toggle bold&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Bold&quot; /&gt;
&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Outline" class="scroll-mt-20">Outline</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center p-8">
                        <RzToggle Variant="ToggleVariant.Outline" aria-label="Toggle italic">
                            <Blazicon Svg="Lucide.Italic" />
                        </RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; aria-label=&quot;Toggle italic&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Italic&quot; /&gt;
&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="With Text" class="scroll-mt-20">With Text</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center gap-2 p-8">
                        <RzToggle Variant="ToggleVariant.Outline" aria-label="Toggle bold text">
                            <Blazicon Svg="Lucide.Bold" class="mr-2 size-4" />
                            Bold
                        </RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline" aria-label="Toggle italic text">
                            <Blazicon Svg="Lucide.Italic" class="mr-2 size-4" />
                            Italic
                        </RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline" aria-label="Toggle underline text">
                            <Blazicon Svg="Lucide.Underline" class="mr-2 size-4" />
                            Underline
                        </RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; aria-label=&quot;Toggle bold text&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Bold&quot; class=&quot;mr-2 size-4&quot; /&gt;
    Bold
&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; aria-label=&quot;Toggle italic text&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Italic&quot; class=&quot;mr-2 size-4&quot; /&gt;
    Italic
&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; aria-label=&quot;Toggle underline text&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Underline&quot; class=&quot;mr-2 size-4&quot; /&gt;
    Underline
&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Sizes" class="scroll-mt-20">Sizes</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center gap-2 p-8">
                        <RzToggle Variant="ToggleVariant.Outline" Size="ToggleSize.Small" aria-label="Small toggle">
                            <Blazicon Svg="Lucide.Bold" />
                        </RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline" Size="ToggleSize.Default" aria-label="Default toggle">
                            <Blazicon Svg="Lucide.Bold" />
                        </RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline" Size="ToggleSize.Large" aria-label="Large toggle">
                            <Blazicon Svg="Lucide.Bold" />
                        </RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; Size=&quot;ToggleSize.Small&quot; aria-label=&quot;Small toggle&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Bold&quot; /&gt;
&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; Size=&quot;ToggleSize.Default&quot; aria-label=&quot;Default toggle&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Bold&quot; /&gt;
&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; Size=&quot;ToggleSize.Large&quot; aria-label=&quot;Large toggle&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Bold&quot; /&gt;
&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Disabled" class="scroll-mt-20">Disabled</RzHeading>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex min-h-32 items-center justify-center gap-2 p-8">
                        <RzToggle Variant="ToggleVariant.Outline" Disabled aria-label="Disabled toggle">
                            <Blazicon Svg="Lucide.Bold" />
                        </RzToggle>
                        <RzToggle Variant="ToggleVariant.Outline" Disabled Pressed="true" aria-label="Disabled pressed toggle">
                            <Blazicon Svg="Lucide.Underline" />
                        </RzToggle>
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; Disabled aria-label=&quot;Disabled toggle&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Bold&quot; /&gt;
&lt;/RzToggle&gt;
&lt;RzToggle Variant=&quot;ToggleVariant.Outline&quot; Disabled Pressed=&quot;true&quot; aria-label=&quot;Disabled pressed toggle&quot;&gt;
    &lt;Blazicon Svg=&quot;Lucide.Underline&quot; /&gt;
&lt;/RzToggle&gt;
                </RzCodeViewer>
            </section>
        </MainContent>
    </RzArticle>
</RzQuickReferenceContainer>
