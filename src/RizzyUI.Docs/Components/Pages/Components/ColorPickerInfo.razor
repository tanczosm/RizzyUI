@page "/components/color-picker"
@namespace RizzyUI.Docs.Components.Pages.Components

@using System.ComponentModel.DataAnnotations
@using RizzyUI

<PageTitle>Color Picker</PageTitle>

<RzArticle>
    <MainContent>
    <RzHeading Level="HeadingLevel.H1">Color Picker</RzHeading>
    <RzParagraph>
        <code>RzColorPicker</code> provides a Coloris-powered color input with RizzyUI styling and SSR-first behavior.
    </RzParagraph>

    <section class="my-8 space-y-4">
        <RzHeading Level="HeadingLevel.H3">Default</RzHeading>
        <EditForm Model="_model">
            <Field>
                <FieldLabel For="@(() => _model.Primary)">Primary</FieldLabel>
                <RzColorPicker For="@(() => _model.Primary)" Placeholder="#3b82f6" />
            </Field>
        </EditForm>
    </section>

    <section class="my-8 space-y-4">
        <RzHeading Level="HeadingLevel.H3">RGB Format</RzHeading>
        <EditForm Model="_model">
            <Field>
                <FieldLabel For="@(() => _model.Secondary)">Secondary</FieldLabel>
                <RzColorPicker For="@(() => _model.Secondary)" Format="ColorFormat.Rgb" />
            </Field>
        </EditForm>
    </section>

    <section class="my-8 space-y-4">
        <RzHeading Level="HeadingLevel.H3">With Alpha</RzHeading>
        <EditForm Model="_model">
            <Field>
                <FieldLabel For="@(() => _model.Overlay)">Overlay</FieldLabel>
                <RzColorPicker For="@(() => _model.Overlay)" Alpha="true" Format="ColorFormat.Hsl" />
            </Field>
        </EditForm>
    </section>

    <section class="my-8 space-y-4">
        <RzHeading Level="HeadingLevel.H3">Swatches Only</RzHeading>
        <EditForm Model="_model">
            <Field>
                <FieldLabel For="@(() => _model.Accent)">Accent</FieldLabel>
                <RzColorPicker For="@(() => _model.Accent)"
                               Swatches="_swatches"
                               SwatchesOnly="true"
                               ClearButton="true" />
            </Field>
        </EditForm>
    </section>

    <section class="my-8 space-y-4">
        <RzHeading Level="HeadingLevel.H3">End Thumbnail</RzHeading>
        <EditForm Model="_model">
            <Field>
                <FieldLabel For="@(() => _model.Surface)">Surface</FieldLabel>
                <RzColorPicker For="@(() => _model.Surface)"
                               ThumbnailPosition="AddonPosition.End"
                               CloseButton="true"
                               Swatches="_swatches" />
            </Field>
        </EditForm>
    </section>
    </MainContent>
</RzArticle>

@code {
    private readonly string[] _swatches = ["#ef4444", "#f59e0b", "#10b981", "#3b82f6", "#8b5cf6"];

    private ColorPickerDemoModel _model = new();

    private sealed class ColorPickerDemoModel
    {
        [Required]
        public string Primary { get; set; } = "#3b82f6";

        public string Secondary { get; set; } = "rgb(14, 165, 233)";

        public string Overlay { get; set; } = "hsla(262, 83%, 58%, 0.5)";

        public string Accent { get; set; } = "#10b981";

        public string Surface { get; set; } = "#18181b";
    }
}
