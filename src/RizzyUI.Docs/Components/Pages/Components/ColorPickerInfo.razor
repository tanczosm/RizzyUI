@page "/components/color-picker"
@namespace RizzyUI.Docs.Components.Pages.Components

@using System.ComponentModel.DataAnnotations

<PageTitle>Color Picker Migration</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle>
        <MainContent>
            <RzBreadcrumb class="mb-4 not-prose">
                <BreadcrumbList>
                    <BreadcrumbItem><BreadcrumbLink Href="/">Docs</BreadcrumbLink></BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem><BreadcrumbLink Href="/components">Components</BreadcrumbLink></BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem><BreadcrumbPage>Color Picker Migration</BreadcrumbPage></BreadcrumbItem>
                </BreadcrumbList>
            </RzBreadcrumb>

            <RzHeading Level="HeadingLevel.H1">Color Picker Migration</RzHeading>
            <RzParagraph>
                <code>RzColorPicker</code> has been replaced by the composed <code>RzInputColor</code> API.
                Use <a href="/components/input-color">Input Color</a> for turnkey usage and
                <a href="/components/color-picker-provider">Color Picker Provider</a> +
                <a href="/components/color-picker-trigger">Color Picker Trigger</a> for headless composition.
            </RzParagraph>

            <EditForm Model="_model" class="max-w-md">
                <Field>
                    <FieldLabel For="@(() => _model.ThemeColor)">Theme color</FieldLabel>
                    <RzInputColor For="@(() => _model.ThemeColor)"
                                  Value="@_model.ThemeColor"
                                  Alpha
                                  Placeholder="Select a color" />
                </Field>
            </EditForm>
        </MainContent>
    </RzArticle>
</RzQuickReferenceContainer>

@code {
    private readonly DemoModel _model = new();

    private sealed class DemoModel
    {
        [Required]
        public string ThemeColor { get; set; } = "#22c55e";
    }
}
