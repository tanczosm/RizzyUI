
@page "/components/button-group"
@namespace RizzyUI.Docs.Components.Pages.Components
@using RizzyUI
@using Blazicons
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Button Group</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzBreadcrumb class="mb-4 not-prose">
                <BreadcrumbList>
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Docs</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/components" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Components</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbPage>Button Group</BreadcrumbPage>
                    </BreadcrumbItem>
                </BreadcrumbList>
            </RzBreadcrumb>

            <RzHeading Level="HeadingLevel.H1" QuickReferenceTitle="Button Group" class="scroll-mt-20">Button Group</RzHeading>
            <RzParagraph>
                A container that groups related buttons together with consistent styling.
            </RzParagraph>

            <!-- Basic Usage -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Basic Usage" class="scroll-mt-20">
                    Basic Usage
                </RzHeading>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-20">
                        <RzButtonGroup>
                            <RzButton Outline>Button 1</RzButton>
                            <RzButton Outline>Button 2</RzButton>
                        </RzButtonGroup>
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzButtonGroup&gt;
    &lt;RzButton Outline&gt;Button 1&lt;/RzButton&gt;
    &lt;RzButton Outline&gt;Button 2&lt;/RzButton&gt;
&lt;/RzButtonGroup&gt;
                </RzCodeViewer>
            </section>

            <!-- Orientation -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Orientation" class="scroll-mt-20">
                    Orientation
                </RzHeading>
                <RzParagraph>
                    Set the <code>Orientation</code> property to change the button group layout.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-20">
                        <RzButtonGroup Orientation="Orientation.Vertical">
                            <RzButton Outline>Button 1</RzButton>
                            <RzButton Outline>Button 2</RzButton>
                        </RzButtonGroup>
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzButtonGroup Orientation="Orientation.Vertical"&gt;
    &lt;RzButton Outline&gt;Button 1&lt;/RzButton&gt;
    &lt;RzButton Outline&gt;Button 2&lt;/RzButton&gt;
&lt;/RzButtonGroup&gt;
                </RzCodeViewer>
            </section>

            <!-- Size -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Size" class="scroll-mt-20">
                    Size
                </RzHeading>
                <RzParagraph>
                    Control the size of buttons using the <code>Size</code> property on individual buttons.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-20">
                        <RzButtonGroup>
                            <RzButton Outline Size="Size.Small">Small</RzButton>
                            <RzButton Outline Size="Size.Small">Small</RzButton>
                            <RzButton Outline Size="Size.Small">Small</RzButton>
                        </RzButtonGroup>
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzButtonGroup&gt;
    &lt;RzButton Outline Size="Size.Small"&gt;Small&lt;/RzButton&gt;
    &lt;RzButton Outline Size="Size.Small"&gt;Small&lt;/RzButton&gt;
    &lt;RzButton Outline Size="Size.Small"&gt;Small&lt;/RzButton&gt;
&lt;/RzButtonGroup&gt;
                </RzCodeViewer>
            </section>

            <!-- Nested -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Nested" class="scroll-mt-20">
                    Nested
                </RzHeading>
                <RzParagraph>
                    Nest <code>RzButtonGroup</code> components to create button groups with spacing.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-20">
                        <RzButtonGroup>
                            <RzButtonGroup>
                                <RzButton Outline>Copy</RzButton>
                                <RzButton Outline>Paste</RzButton>
                            </RzButtonGroup>
                            <RzButtonGroup>
                                <RzButton Outline>
                                    <Blazicon Svg="MdiIcon.FormatBold" />
                                </RzButton>
                                <RzButton Outline>
                                    <Blazicon Svg="MdiIcon.FormatItalic" />
                                </RzButton>
                                <RzButton Outline>
                                    <Blazicon Svg="MdiIcon.FormatUnderline" />
                                </RzButton>
                            </RzButtonGroup>
                        </RzButtonGroup>
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzButtonGroup&gt;
    &lt;RzButtonGroup&gt;
        &lt;RzButton Outline&gt;Copy&lt;/RzButton&gt;
        &lt;RzButton Outline&gt;Paste&lt;/RzButton&gt;
    &lt;/RzButtonGroup&gt;
    &lt;RzButtonGroup&gt;
        &lt;RzButton Outline&gt;
            &lt;Blazicon Svg="MdiIcon.FormatBold" /&gt;
        &lt;/RzButton&gt;
        &lt;RzButton Outline&gt;
            &lt;Blazicon Svg="MdiIcon.FormatItalic" /&gt;
        &lt;/RzButton&gt;
        &lt;RzButton Outline&gt;
            &lt;Blazicon Svg="MdiIcon.FormatUnderline" /&gt;
        &lt;/RzButton&gt;
    &lt;/RzButtonGroup&gt;
&lt;/RzButtonGroup&gt;
                </RzCodeViewer>
            </section>

            <!-- Separator -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Separator" class="scroll-mt-20">
                    Separator
                </RzHeading>
                <RzParagraph>
                    The <code>ButtonGroupSeparator</code> component visually divides buttons within a group. Useful for variants other than outline.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-20">
                        <RzButtonGroup>
                            <RzButton Variant="ThemeVariant.Secondary">Item 1</RzButton>
                            <ButtonGroupSeparator />
                            <RzButton Variant="ThemeVariant.Secondary">Item 2</RzButton>
                        </RzButtonGroup>
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzButtonGroup&gt;
    &lt;RzButton Variant="ThemeVariant.Secondary"&gt;Item 1&lt;/RzButton&gt;
    &lt;ButtonGroupSeparator /&gt;
    &lt;RzButton Variant="ThemeVariant.Secondary"&gt;Item 2&lt;/RzButton&gt;
&lt;/RzButtonGroup&gt;
                </RzCodeViewer>
            </section>

            <!-- Split -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Split" class="scroll-mt-20">
                    Split
                </RzHeading>
                <RzParagraph>
                    Create a split button group by adding two buttons separated by a <code>ButtonGroupSeparator</code>.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-20">
                        <RzButtonGroup>
                            <RzButton Variant="ThemeVariant.Primary">Action</RzButton>
                            <ButtonGroupSeparator />
                            <RzButton Variant="ThemeVariant.Primary" class="w-9 px-0">
                                <Blazicon Svg="MdiIcon.ChevronDown" />
                            </RzButton>
                        </RzButtonGroup>
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzButtonGroup&gt;
    &lt;RzButton Variant="ThemeVariant.Primary"&gt;Action&lt;/RzButton&gt;
    &lt;ButtonGroupSeparator /&gt;
    &lt;RzButton Variant="ThemeVariant.Primary" class="w-9 px-0"&gt;
        &lt;Blazicon Svg="MdiIcon.ChevronDown" /&gt;
    &lt;/RzButton&gt;
&lt;/RzButtonGroup&gt;
                </RzCodeViewer>
            </section>

            <!-- Input -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Input" class="scroll-mt-20">
                    Input
                </RzHeading>
                <RzParagraph>
                    Wrap an input component with buttons.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-20">
                        <EditForm Model="@_formModel">
                            <RzButtonGroup>
                                <RzInputText For="@(() => _formModel.SearchValue)" Placeholder="Type something..." class="w-[200px]" />
                                <RzButton Outline class="w-9 px-0">
                                    <Blazicon Svg="MdiIcon.Magnify" />
                                </RzButton>
                            </RzButtonGroup>
                        </EditForm>
                       
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzButtonGroup&gt;
    &lt;RzInputText For="@@(() => _formModel.SearchValue)" Placeholder="Type something..." class="w-[200px]" /&gt;
    &lt;RzButton Outline class="w-9 px-0"&gt;
        &lt;Blazicon Svg="MdiIcon.Magnify" /&gt;
    &lt;/RzButton&gt;
&lt;/RzButtonGroup&gt;
                </RzCodeViewer>
            </section>

            <!-- Input Group -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Input Group" class="scroll-mt-20">
                    Input Group
                </RzHeading>
                <RzParagraph>
                    Wrap an <code>RzInputGroup</code> component to create complex input layouts.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-20">
                        <RzButtonGroup class="[--radius:9999rem]" x-data="{ voiceEnabled: false }">
    
                            <RzButtonGroup>
                                <RzButton Variant="ThemeVariant.Default" Outline class="size-9 px-0">
                                    <Blazicon Svg="Lucide.Plus" />
                                </RzButton>
                            </RzButtonGroup>
    
                            <RzButtonGroup>
                                <EditForm Model="_chatModel">
                                    <RzInputGroup>
                                        <InputGroupInput For="@(() => _chatModel.Message)" 
                                                         Placeholder="Send a message..."
                                                         x-bind:placeholder="voiceEnabled ? 'Record and send audio...' : 'Send a message...'"
                                                         x-bind:disabled="voiceEnabled" />
                                 
                                        <InputGroupAddon Align="InputGroupAddonAlign.InlineEnd">
                                            <InputGroupButton Size="InputGroupButtonSize.IconExtraSmall"
                                                              type="button"
                                                              x-on:click="voiceEnabled = !voiceEnabled"
                                                              x-bind:aria-pressed="voiceEnabled"
                                                              x-bind:data-active="voiceEnabled"
                                                              class="data-[active=true]:bg-orange-100 data-[active=true]:text-orange-700 dark:data-[active=true]:bg-orange-800 dark:data-[active=true]:text-orange-100 transition-colors">
                                                <Blazicon Svg="@Lucide.AudioLines" />
                                            </InputGroupButton>
                                        </InputGroupAddon>
                                    </RzInputGroup>
                                </EditForm>
                            </RzButtonGroup>
                        </RzButtonGroup>

                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
                        &lt;RzButtonGroup class=&quot;[--radius:9999rem]&quot; x-data=&quot;{ voiceEnabled: false }&quot;&gt;
    
                            &lt;RzButtonGroup&gt;
                                &lt;RzButton Variant=&quot;ThemeVariant.Default&quot; Outline=&quot;true&quot; class=&quot;size-9 px-0&quot;&gt;
                                    &lt;Blazicon Svg=&quot;Lucide.Plus&quot; /&gt;
                                &lt;/RzButton&gt;
                            &lt;/RzButtonGroup&gt;
    
                            &lt;RzButtonGroup&gt;
                                &lt;EditForm Model=&quot;_chatModel&quot;&gt;
                                    &lt;RzInputGroup&gt;
                                        &lt;InputGroupInput For=&quot;@@(() =&gt; _chatModel.Message)&quot; 
                                                         Placeholder=&quot;Send a message...&quot;
                                                         x-bind:placeholder=&quot;voiceEnabled ? &#39;Record and send audio...&#39; : &#39;Send a message...&#39;&quot;
                                                         x-bind:disabled=&quot;voiceEnabled&quot; /&gt;
                                 
                                        &lt;InputGroupAddon Align=&quot;InputGroupAddonAlign.InlineEnd&quot;&gt;
                                            &lt;InputGroupButton Size=&quot;InputGroupButtonSize.IconExtraSmall&quot;
                                                              type=&quot;button&quot;
                                                              x-on:click=&quot;voiceEnabled = !voiceEnabled&quot;
                                                              x-bind:aria-pressed=&quot;voiceEnabled&quot;
                                                              x-bind:data-active=&quot;voiceEnabled&quot;
                                                              class=&quot;data-[active=true]:bg-orange-100 data-[active=true]:text-orange-700 dark:data-[active=true]:bg-orange-800 dark:data-[active=true]:text-orange-100 transition-colors&quot;&gt;
                                                &lt;Blazicon Svg=&quot;@@Lucide.AudioLines&quot; /&gt;
                                            &lt;/InputGroupButton&gt;
                                        &lt;/InputGroupAddon&gt;
                                    &lt;/RzInputGroup&gt;
                                &lt;/EditForm&gt;
                            &lt;/RzButtonGroup&gt;
                        &lt;/RzButtonGroup&gt;
                
                        @@code {
                            private ChatModel _model = new();

                            private class ChatModel
                            {
                                public string Message { get; set; } = "";
                            }                        
                        }
                
                </RzCodeViewer>
            </section>

             <!-- Dropdown Menu -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Dropdown Menu" class="scroll-mt-20">
                    Dropdown Menu
                </RzHeading>
                <RzParagraph>
                    Create a split button group with a <code>RzDropdownMenu</code>.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-40">
                        <RzButtonGroup>
                            <RzButton Variant="ThemeVariant.Primary">Profile</RzButton>
                            <ButtonGroupSeparator />
                            <RzDropdownMenu>
                                <DropdownMenuTrigger AsChild>
                                    <RzButton Variant="ThemeVariant.Primary" class="w-9 px-0">
                                        <Blazicon Svg="MdiIcon.ChevronDown" />
                                    </RzButton>
                                </DropdownMenuTrigger>
                                <DropdownMenuContent>
                                    <DropdownMenuItem>Settings</DropdownMenuItem>
                                    <DropdownMenuItem>Messages</DropdownMenuItem>
                                    <DropdownMenuSeparator />
                                    <DropdownMenuItem>Logout</DropdownMenuItem>
                                </DropdownMenuContent>
                            </RzDropdownMenu>
                        </RzButtonGroup>
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzButtonGroup&gt;
    &lt;RzButton Variant="ThemeVariant.Primary"&gt;Profile&lt;/RzButton&gt;
    &lt;ButtonGroupSeparator /&gt;
    &lt;RzDropdownMenu&gt;
        &lt;DropdownMenuTrigger AsChild&gt;
            &lt;RzButton Variant="ThemeVariant.Primary" class="w-9 px-0"&gt;
                &lt;Blazicon Svg="MdiIcon.ChevronDown" /&gt;
            &lt;/RzButton&gt;
        &lt;/DropdownMenuTrigger&gt;
        &lt;DropdownMenuContent&gt;
            &lt;DropdownMenuItem&gt;Settings&lt;/DropdownMenuItem&gt;
            &lt;DropdownMenuItem&gt;Messages&lt;/DropdownMenuItem&gt;
            &lt;DropdownMenuSeparator /&gt;
            &lt;DropdownMenuItem&gt;Logout&lt;/DropdownMenuItem&gt;
        &lt;/DropdownMenuContent&gt;
    &lt;/RzDropdownMenu&gt;
&lt;/RzButtonGroup&gt;
                </RzCodeViewer>
            </section>

            <!-- Select -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Select" class="scroll-mt-20">
                    Select
                </RzHeading>
                <RzParagraph>
                    Pair with a <code>RzNativeSelect</code> component.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-20">
                         <RzButtonGroup>
                            <ButtonGroupText>Format</ButtonGroupText>
                            <EditForm Model="@_formModel">
                                <RzNativeSelect For="@(() => _formModel.SearchValue)" class="w-[150px]">
                                    <option value="mp4">MP4</option>
                                    <option value="mov">MOV</option>
                                    <option value="avi">AVI</option>
                                </RzNativeSelect>
                            </EditForm>
                        </RzButtonGroup>
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzButtonGroup&gt;
    &lt;ButtonGroupText&gt;Format&lt;/ButtonGroupText&gt;
    &lt;RzNativeSelect For="@@(() => _formModel.SearchValue)" class="w-[150px]"&gt;
        &lt;option value="mp4"&gt;MP4&lt;/option&gt;
        &lt;option value="mov"&gt;MOV&lt;/option&gt;
        &lt;option value="avi"&gt;AVI&lt;/option&gt;
    &lt;/RzNativeSelect&gt;
&lt;/RzButtonGroup&gt;
                </RzCodeViewer>
            </section>
            
             <!-- Popover -->
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Popover" class="scroll-mt-20">
                    Popover
                </RzHeading>
                <RzParagraph>
                    Use with a <code>RzPopover</code> component.
                </RzParagraph>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto p-8 mb-5 flex justify-center items-center min-h-40">
                         <RzButtonGroup>
                             <RzButton Variant="ThemeVariant.Secondary">Settings</RzButton>
                             <ButtonGroupSeparator />
                             <RzPopover>
                                 <PopoverTrigger AsChild>
                                     <RzButton Variant="ThemeVariant.Secondary" class="w-9 px-0">
                                        <Blazicon Svg="MdiIcon.Cog" />
                                     </RzButton>
                                 </PopoverTrigger>
                                 <PopoverContent>
                                     <div class="grid gap-4">
                                         <div class="space-y-2">
                                             <h4 class="font-medium leading-none">Dimensions</h4>
